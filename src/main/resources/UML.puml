@startuml

skinparam classAttributeIconSize 0


class PessoaFisica extends Pessoa {
  -cpf: String
  -rg: String
}

class PessoaJuridica extends Pessoa {
  -cnpj: String
  -inscricaoEstadual: String
}

abstract class Pessoa {
  -nome: String
  -email: String
}

class Cliente extends PessoaFisica{
  -dataCadastro: LocalDateTime
}

class Endereco {
  -rua: String
  -bairro: String
  -complemento: String
  -numero: String
  -cidade: String
  -estado: String
  -cep: String

}

class Telefone {
  -numero: String
  -ddd: String
}

Class Departamento {
  -sigla: String
  -descricao: String
}

class Funcionario extends PessoaFisica {
  -cargo: String
  -dataAdmissao: LocalDate
}

class Fornecedor extends PessoaJuridica {
  -razaoSocial: String
}

class Usuario {
  -nome: String
  -login: String
  -senha: String
}

class Pedido {
  -quantidade: Integer

}

class Pagamento {
  -LocalDateTime

}

class Pix extends Pagamento {

}

class Boleto extends Pagamento {

}

class Cartao extends Pagamento{

}

class ItemPedido {
  -quantidade: Integer
  -preco: double

}

class Fonte {
  -nome: String
  -potencia: Integer
  -preco: double
  -estoque: Integer
}

class Marca {
  -nome: String
}

enum Certificacao {
  + BRONZE: int
  + SILVER: int
  + GOLD: int 
}

class Modelo {
  -numeracao: int
  
  }

Pessoa "1" *--> "*" Endereco
Pessoa "1" *--> "*" Telefone

Funcionario "*" --> "1" Departamento

Pedido "*" --> "1" Usuario 
Pedido "1" --> "*" ItemPedido
Pedido "*" --> "1" Pagamento 

ItemPedido "*" --> "1" Fonte

Fonte "*" --> "1" Modelo
Fonte "*" --> "*" Fornecedor
Fonte "*" --> "1" Certificacao

Modelo "*" --> "1" Marca


@enduml